---
/** PLEASE NOTE THIS IS ONLY FOR BOOTSTRAP */
const toasts = await fetch("https://storage.hylia.dev/toasts.json").then((res) =>
  res.json()
);

const toast = toasts[Math.floor(Math.random() * toasts.length)];

---
<div class="toast-container position-fixed bottom-0 start-0 p-3">
  <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <img src={toast.media} class="rounded me-2" alt={toast.title} style="width: 30px;">
        <strong class="me-auto">{toast.title}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body" style="color: black;">
        {toast.content}

        {toast.$buttons ? (
            <div class="mt-2 pt-2 border-top">
                {toast.$buttons.map((button: any) => (
                    <a type="button" class={`btn btn-${button.type || "primary"} btn-sm`} href={button.link} target="_blank" rel="noopener noreferrer nofollow">{button.text}</button>
                ))}
            </div>
        ) : null}
      </div>
    </div>
  </div>
</div>