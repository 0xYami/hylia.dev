---
import Socials from "../Socials.astro";
import HeaderLinks from "../HeaderLinks.astro";

interface Props {
  isPost?: boolean;
}

const { isPost } = Astro.props;
---

<header class="header-default" style="background-color: #333333;">
  <nav class="navbar navbar-expand-lg">
    <div class="container-xl">
      <!-- site logo -->
      <a class="navbar-brand" href="/"
        ><img
          src="https://storage.hylia.dev/images/47033415ef4841d627d49d05058324e8.jpg"
          alt="logo"
          style="border-radius: 50%; width: 68px;"
        /></a
      >

      <div class="collapse navbar-collapse">
        <!-- menus -->
        <ul class="navbar-nav mr-auto" style="color: #fff;">
          <HeaderLinks
            liClass="nav-item"
            aClass="nav-link white"
            links={[
              { text: "Home", href: "/" },
              { text: "Blog", href: "/blog" },
              { text: "Documentation", href: "https://docs.hylia.dev" },
            ]}
          />
        </ul>
      </div>

      <div class="header-right">
        <ul class="social-icons list-unstyled list-inline mb-0">
          <Socials classes="list-inline-item" />
        </ul>
      </div>
    </div>
  </nav>
</header>

<style>
    .white {
        color: #fff;
    }
</style>
